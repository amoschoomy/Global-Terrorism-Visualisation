{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "title": "Global Terrorism Around the World from 1970-2017",
  "description": "",

  "width": 880,
  "height": 300,
  "data": [
    {
      "name": "terror",
      "url": "data\\globalterrorismdb_0718dist.csv",
      "format": {
        "type": "csv",
        "parse": "auto",
        "delimiter": ","
      },
      "transform": [
        {
          "type": "aggregate",
          "groupby": [
            "country_txt"
          ]
        }
      ]
    },
    {
      "name": "map",
      "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/countries-110m.json",
      "format": {
        "type": "topojson",
        "feature": "countries"
      },
      "transform": [
        {
          "type": "lookup",
          "from": "terror",
          "key": "country_txt",
          "fields": [
            "properties.name"
          ],
          "values": [
            "count"
          ],
          "as": [
            "Terrorism_Count"
          ]
        },
        {
          "type": "formula",
          "as": "Log_Count",
          "expr": "datum.Terrorism_Count+0.1"
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "type": "equalEarth"
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "log",
      "domain": [
        10,
        1000,
        5000,
        10000
      ],
      "range": {
        "scheme": "reds",
        "count": 4
      }
    }
  ],
  "legends": [
    {
      "fill": "color",
      "orient": "bottom-left",
      "title": "Terrorism Count",
      "labelAlign":"left",
      "padding":40
    }
  ],
  "marks": [
    {
      "type": "shape",
      "from": {
        "data": "map"
      },
      "encode": {
        "enter": {
          "tooltip": {
            "signal": "{'Country': datum.properties.name, 'Terrorism Count': datum.Terrorism_Count}"
          }
        },
        "update": {
          "fill": {
            "scale": "color",
            "field": "Log_Count"
          }
        },
        "hover": {
          "fill": {
            "value": "black"
          }
        }
      },
      "transform": [
        {
          "type": "geoshape",
          "projection": "projection"
        }
      ]
    }
  ]
}